<?xml version="1.0" encoding="UTF-8"?>

   <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>

	<!-- 以下属于用户模块 -->
	<package name="user" extends="struts-default" namespace="/">
		<action name="user_*" class="userAction" method="{1}">
			<result name="login_success" type="redirect">/index.jsp</result>
			<result name="login_error">/login.jsp</result>
		</action>
	</package>

	<!-- 以下属于客户模块 -->
	<package name="customer" extends="struts-default" namespace="/">
		<action name="customer_*" class="customerAction" method="{1}">
		</action>
	</package>

	<!-- 以下属于字典模块 -->
	<package name="baseDict" extends="struts-default" namespace="/">
		<action name="baseDict_*" class="baseDictAction" method="{1}">
		</action>
	</package>

</struts>	